{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start CaveBot (Full Stack)",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Start Backend",
        "Start Frontend Dev"
      ],
      "group": "build"
    },
    {
      "label": "Start Backend",
      "type": "shell",
      "windows": {
        "command": "python",
        "args": ["-m", "uvicorn", "main:app", "--reload", "--host", "0.0.0.0", "--port", "8000"]
      },
      "linux": {
        "command": "python",
        "args": ["-m", "uvicorn", "main:app", "--reload", "--host", "0.0.0.0", "--port", "8000"]
      },
      "osx": {
        "command": "python3",
        "args": ["-m", "uvicorn", "main:app", "--reload", "--host", "0.0.0.0", "--port", "8000"]
      },
      "options": {
        "cwd": "${workspaceFolder}/UI"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "runOptions": {
        "instanceLimit": 1
      }
    },
    {
      "label": "Start Frontend Dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/UI/frontend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "runOptions": {
        "instanceLimit": 1
      }
    },
    {
      "label": "Build Frontend",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "options": {
        "cwd": "${workspaceFolder}/UI/frontend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "Install Frontend Dependencies",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "options": {
        "cwd": "${workspaceFolder}/UI/frontend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "Start Production",
      "dependsOn": ["Build Frontend", "Start Backend"],
      "dependsOrder": "sequence",
      "group": "build"
    },
    {
      "label": "Update Submodules",
      "type": "shell",
      "command": "git submodule update --init --recursive",
      "group": "build"
    },
    {
      "label": "Configure Pico Project",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        "CaveSense",
        "-B",
        "CaveSense/build",
        "-G",
        "Ninja"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build Pico Project",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "CaveSense/build"
      ],
      "group": "build",
      "dependsOn": "Configure Pico Project",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Flash to Pico",
      "type": "shell",
      "windows": {
        "command": "copy",
        "args": [
          "microcontrollers\\build\\sensor_controller.uf2",
          "${input:picoDriveLetter}:/"
        ]
      },
      "linux": {
        "command": "cp",
        "args": [
          "microcontrollers/build/sensor_controller.uf2",
          "/media/${env:USER}/RPI-RP2/"
        ]
      },
      "osx": {
        "command": "cp",
        "args": [
          "microcontrollers/build/sensor_controller.uf2",
          "/Volumes/RPI-RP2/"
        ]
      },
      "dependsOn": "Build Pico Project",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ],
  "inputs": [
    {
      "id": "picoDriveLetter",
      "type": "promptString",
      "description": "Enter the drive letter of the mounted Pico (e.g., E)",
      "default": "E"
    }
  ]
}